@using TravelTripProje.Models.Sinifler
@model List<Blog>
<div class="con-bot">
    @foreach (var x in Model)
    {
        <div class="left">
            <div class="bot-left">
                <img src="@x.BlogImage" style="height:150px; width:300px"alt="" />
            </div>
            <div class="left-text">
                <h4>@x.Baslik</h4>
                <span class="doller">@x.Tarih.ToString("dd.mm.yyyy")</span>
                <p>@x.Aciklama.Substring(0,100)</p>
                <p><a href="/Blog/BlogDetay/@x.ID"><span class="read">Devamını Oku</span></a></p>
            </div>
        </div>
    }
    @Html.Action("Partial2","Default")  @*burada ise partial (partial1) içerisine 
                                            partial (partial2) cagırabildiğimizi gördük*@ 


    <div class="clear"></div>
</div>


