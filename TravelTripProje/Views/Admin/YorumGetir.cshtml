@model TravelTripProje.Models.Sinifler.Yorumlar

@{
    ViewBag.Title = "YorumGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yorum Güncelleme Sayfası</h2>
<br />
<!--  BlogGuncelle: ActionResult cagırıldıgında.   Admin: adminController sınıfından
       Post:Sayfada herhangi bir butona tıklanıldıgında -->

@using (Html.BeginForm("YorumGuncelle", "Admin,", FormMethod.Post))
{
    @Html.LabelFor(x => x.ID)
    @Html.TextBoxFor(x => x.ID, new { @class = "form-control", @readonly = "readyonly" }) @* readonly: ID degerinin değiştirilmesini engelledi*@
    <br />
    @Html.LabelFor(x => x.KullaniciAdi)
    @Html.TextBoxFor(x => x.KullaniciAdi, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Mail)
    @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Yorum)
    @Html.TextAreaFor(x => x.Yorum,15,1, new { @class = "form-control" })
    <br />   
    <button class="btn btn-success">Yorum Guncelle</button>
}
